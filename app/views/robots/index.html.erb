<h1>Robots</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Kind</th>
      <th>Task Count</th>
      <th>Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @robots.order(:id).each do |robot| %>
      <tr>
        <td><%= robot.name %></td>
        <td><%= robot.kind.humanize %></td>
        <td><%= robot.tasks.count %></td>
        <td>
          <%= link_to 'Edit', edit_robot_path(robot), class: 'btn btn-outline-primary shadow-none' %>
          <%= link_to 'Run Tasks', '#', class: 'run_tasks btn btn-outline-success shadow-none', data: { robot_id: robot.id }, role: 'button' %>
          <%= link_to 'Destroy', robot, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-outline-danger shadow-none' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Robot', new_robot_path %>

<% @robots.order(:id).each do |robot| %>
  <div class='task_log'>
    <%= robot.name %>
    <div class='dotter' data-robot-id=<%= robot.id %>></div>
    <div class='timer' data-robot-id=<%= robot.id %>></div>
    <div class='log' data-robot-id=<%= robot.id %>></div>
  </div>
<% end %>

